.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin:20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff; 
}  
.hover
{
  background-color:#C0C0C0;
}